{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run server.ts",
      "allow": [
        "env",
        "net",
        "read",
        "write",
        "plugin"
      ],
      "env": {
        "PORT": "8001",
        "HOST": "localhost"
      },
      "tsconfig": "tsconfig.json",
      "unstable": true
    },
    "debug": {
      "cmd": "deno run --inspect-brk server.ts",
      "allow": [
        "env",
        "net",
        "read"
      ],
      "env": {
        "PORT": "8001",
        "HOST": "localhost"
      },
      "unstable": true
    }
  },
  "logger": {
    "debug": true
  }
}
